doctype html
html(lang="ja")
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(rel="stylesheet" href="./css/bulma.css")
    
    section.section
        div.container
            //- 複数カラムのレイアウト
            div#app.columns
                //- 左サイドバー 1/5
                //- カテゴリーナビゲーション
                div.column.is-one-fifth
                    list(v-for="category in categories")
                        li
                            a(@click.prevent="switch_category(category)") {{ category }}
                //- メインカラム aito
                div.column.auto
                    div.box
                        h1.title パスワード管理システム
                        p.subtitle {{ current_category }}
                        table.table.is-striped.is-fullwidth
                            thead
                                tr
                                    th エントリー
                                    th ユーザー名
                                    th パスワード
                            tbody
                                tr(v-for="entry in entries")
                                    td(v-for="e in entry") {{ e }}
    
    script(src="./js/vue.min.js")
    script(src="./js/axios.min.js")
    script(src="./js/main.js")
